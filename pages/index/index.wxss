.user-container {
  height: 100vh;
  box-sizing: border-box;
  padding: 24rpx 36rpx;
}
.info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.info .name .name-main {
  font-size: 48rpx;
  color: #222222;
}
.info .name .user-iden {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #666666;
}
.info .avatar {
  width: 200rpx;
  height: 200rpx;
}