.trip_audio{
  width:100%;
}
.trip_tit{
  padding: 30rpx;
  font-size:36rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(16,21,40,1);
  padding-bottom: 10rpx;
}
.time{
  height:34rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(16,21,40,0.46);
  line-height:34rpx;
  width: 610rpx;
  margin: 0 auto;
}
.trip_btn{
  width: 330rpx;
  height: 28rpx;
  display: flex;
  justify-content: space-between;
  margin: 10rpx auto;
}
.trip_btn image{
  width: 28rpx;
  height: 28rpx;
  display: block;
}
.time_left{
  float: left;
}
.time_right{
