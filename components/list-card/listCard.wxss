.card {
  width: 100%;
  height: 700rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
}
.card .title {
  display: flex;
  align-items: center;
}
.card .title image {
  width: 72rpx;
  height: 72rpx;
}
.card .title text {
  margin-left: 16rpx;
  font-size: 28rpx;
  letter-spacing: 0;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.card .card-cover {
  margin-top: 12rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-self: center;
}
.card .block-live {
  margin-top: 8rpx;
}